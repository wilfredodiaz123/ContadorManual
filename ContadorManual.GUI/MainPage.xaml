<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContadorManual.GUI.MainPage"
             Title="Contador God"
             BackgroundColor="LightGrey">
    <Grid
        Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <VerticalStackLayout
        Margin="24"
        Grid.Row="0"
        Grid.Column="0">
            <Label
            Text="Conteo:"
            FontSize="Medium"/>
            <Border
            Stroke="Grey"
            Margin="0,24,0,36">

                <Label
               HorizontalOptions="Center"
               Text="0"
               FontSize="Large"
               FontAttributes="Bold"
               Margin="0,24"
                TextColor="Black"
                x:Name="ConteoLabel"/>

            </Border>
        </VerticalStackLayout>
        <HorizontalStackLayout
           Grid.Row="1"
            Grid.Column="0"
            HorizontalOptions="Center"
            Spacing="32">
            <Button
               Text="Contar"
               FontSize="Medium"
                WidthRequest="130"
                Clicked="OnContarButtonClicked"/>
            <Button
               Text="Reniciar"
                FontSize="Medium"
                WidthRequest="130"
                Clicked="OnReiniciarButtonClicked"/>

        </HorizontalStackLayout>
    </Grid>
</ContentPage>
